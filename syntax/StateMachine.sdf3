// Grammar for the StateMachine language
// By default, based on an example "entity language" syntax

module StateMachine

imports 

	Common

context-free start-symbols

	Start

templates

	Start.Module = <
		module <ID> 
		
		<Definition*; separator="\n\n">
	>

	Definition.Entity = <
		entity <ID> {
			<Property*; separator="\n">
		}
	>
  	
	Property.Property = <<ID> : <Type>>
	
	Type.Type = <<ID>>

